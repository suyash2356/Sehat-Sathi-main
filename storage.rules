rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated doctors to read/write files under their own folder
    match /doctors/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // You can add other public assets rules here if needed, for example:
    // match /public/{allPaths=**} {
    //   allow read: if true;
    // }
  }
}
