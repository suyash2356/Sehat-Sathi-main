rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check admin role
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.isAdmin == true || 
        request.auth.token.email == 'admin@sehatsathi.com'
      );
    }

    // Users collection (Patients/General Users)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /{subcollection}/{docId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    // Doctors collection
    match /doctors/{doctorId} {
      // Anyone can read doctors (needed for the map/listing)
      allow read: if true; 
      
      // Update: Owner can update profile, Admin can verify/reject (delete)
      allow write: if isOwner(doctorId) || isAdmin();
      
      match /{subcollection}/{docId} {
         allow read, write, delete: if isOwner(doctorId) || isAdmin();
      }
    }
    
    // Patients collection (profiles)
    match /patients/{patientId} {
      // Owner can read/write their own patient profile
      allow read, write: if isOwner(patientId) || isAdmin();
      match /{sub}/{docId} {
        allow read, write: if isOwner(patientId) || isAdmin();
      }
    }
    
    // 1. Appointments (Administrative Data)
    match /appointments/{appointmentId} {
      // Create: Patient only
      allow create: if isAuthenticated() && request.resource.data.patientId == request.auth.uid;
      
      // Read: Participants
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        resource.data.doctorId == request.auth.uid ||
        isAdmin()
      );

      // Update: 
      // - Doctor can accept/reject/start/complete
      // - Patient can cancel (if pending)
      allow update: if isAuthenticated() && (
        (resource.data.doctorId == request.auth.uid) ||
        (resource.data.patientId == request.auth.uid && resource.data.status == 'pending')
      );
    }

    // 2. Call Sessions (Real-Time Signaling)
    match /callSessions/{sessionId} {
      function isParticipant() {
        return isAuthenticated() && (
          resource.data.doctorId == request.auth.uid || 
          resource.data.patientId == request.auth.uid
        );
      }

      // Read: Only participants (Split for better query support)
      // Ensure the document explicitly lists the participant field and matches request.auth.uid
      allow read: if isAuthenticated() && (
        (resource.data.doctorId is string && resource.data.doctorId == request.auth.uid) || 
        (resource.data.patientId is string && resource.data.patientId == request.auth.uid)
      );

      // Create: DOCTOR ONLY (The one listed in the data)
      // Additional checks: must supply `appointmentId` and that appointment must exist and belong to the creating doctor
      allow create: if isAuthenticated() && request.resource.data.doctorId == request.auth.uid
        && request.resource.data.appointmentId is string
        && exists(/databases/$(database)/documents/appointments/$(request.resource.data.appointmentId))
        && get(/databases/$(database)/documents/appointments/$(request.resource.data.appointmentId)).data.doctorId == request.auth.uid;

      // Update: Participants (Signaling: Offer/Answer)
      allow update: if isAuthenticated() && (
        resource.data.doctorId == request.auth.uid || 
        resource.data.patientId == request.auth.uid
      );

      // Delete: DOCTOR ONLY (End Call)
      allow delete: if isAuthenticated() && resource.data.doctorId == request.auth.uid;

      // Subcollection: ICE Candidates
      match /candidates/{candidateId} {
         // To avoid get() calls on the parent which can cause permission evaluation issues during queries,
         // allow authenticated users to read candidate docs (they are stored under a non-guessable session id).
         // Creation is restricted to the authenticated sender.
         allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
         allow read: if isAuthenticated();
         allow delete: if isAuthenticated() && (resource.data.senderId == request.auth.uid ||
           // allow doctor to remove candidates under their session
           exists(/databases/$(database)/documents/callSessions/$(sessionId)) &&
           get(/databases/$(database)/documents/callSessions/$(sessionId)).data.doctorId == request.auth.uid);
      }
    }

    // 3. Prescriptions (Restored)
    match /prescriptions/{prescriptionId} {
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        resource.data.doctorId == request.auth.uid ||
        isAdmin()
      );
      
      // Doctors create for their patients
      allow create: if isAuthenticated() && request.resource.data.doctorId == request.auth.uid;
      
      // Admin deletes
      allow update, delete: if isAdmin();
    }
  }
}
